<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerproject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/ic_rlistworker">

    <TextView
        android:id="@+id/tv_compayname"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_width="190dp"
        android:background="@drawable/handlefull"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@android:color/primary_text_light_nodisable"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nameproject"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Name project"
        android:textSize="16sp"
        android:layout_width="190dp"
        android:background="@drawable/handlefull"
        android:textColor="#9EA0A5"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/tv_compayname" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_statusproject"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Status"
        android:textSize="16sp"
        android:layout_width="100dp"
        android:background="@drawable/ic_skill"
        android:textColor="#9EA0A5"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/tv_nameproject" />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
