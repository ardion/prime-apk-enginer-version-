<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/containerexperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/ic_rlistworker">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_position"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Position"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/primary_text_light_nodisable"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv1" />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@+id/tv_position"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Date"
            android:textSize="16sp"
            android:textColor="#9EA0A5"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv4" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"/>

        <TextView
            android:id="@+id/tv_namecompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Company Name"
            android:textSize="16sp"
            android:textColor="#9EA0A5"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv2" />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description Work"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@+id/tv_namecompany"/>

        <TextView
            android:id="@+id/tv_descwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Description Work"
            android:textSize="16sp"
            android:textColor="#9EA0A5"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv3" />




        <ImageView
            android:id="@+id/tv_imageporto"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/coba1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


