<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/containerporto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/ic_rlistworker">
<TextView
    android:id="@+id/tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name Aplication"
    android:layout_marginLeft="20dp"
    app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
    app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_nameApp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Name Aplication"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/primary_text_light_nodisable"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv1" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link Repository"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameApp"/>

        <TextView
            android:id="@+id/tv_linkrepo"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_rexperporto"
            android:layout_marginLeft="20dp"
            android:text="Link Repository"
            android:paddingLeft="2dp"
            android:textSize="16sp"
            android:textColor="#9EA0A5"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv2" />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Repository"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@+id/tv_linkrepo"/>

        <TextView
            android:id="@+id/tv_typerepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Type Repository"
            android:textSize="16sp"
            android:textColor="#9EA0A5"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv3" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Portofolio"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@+id/tv_typerepo"/>

        <TextView
            android:id="@+id/tv_typeporto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Type Portofolio"
            android:textSize="16sp"
            android:textColor="#9EA0A5"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_imageporto"
            app:layout_constraintTop_toBottomOf="@id/tv4" />


        <ImageView
            android:id="@+id/tv_imageporto"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/coba1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

